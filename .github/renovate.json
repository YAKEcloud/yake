        "release-v1.110",
        "release-v1.111",
        "release-v1.112",
        "release-v1.113",
        "release-v1.114",
        "release-v1.115",
        "release-v1.116"
      ],
      "enabled": false,
      "matchPackageNames": [
        "/.*/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.106"
      ],
      "allowedVersions": "/^1[.]106[.].*$/",
      "enabled": true,
      "matchPackageNames": [
        "/gardener-controlplane/",
        "/gardener-controlplane-application/",
        "/gardener-controlplane-runtime/",
        "/gardener-application/",
        "/gardenlet/"
      ]
    },
    {
