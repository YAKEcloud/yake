{
  "assignees": [
    "rhizoet"
  ],
  "baseBranches": [
    "main",
    "release-v1.97",
    "release-v1.98",
    "release-v1.99",
    "release-v1.100",
    "release-v1.101",
    "release-v1.102"
  ],
  "automerge": true,
  "configMigration": true,
  "dependencyDashboard": true,
  "platformAutomerge": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 1,
  "flux": {
    "fileMatch": [
      "pre-gardener/.*.yaml",
      "gardener/.*.yaml",
      "flux-system/gotk-components.yaml"
    ]
  },
  "packageRules": [
    {
      "groupName": "gardener-controlplane",
      "matchPackageNames": [
        "/.*gardener-controlplane.*/",
        "/gardenlet/"
      ]
    },
    {
      "groupName": "dashboard-identity",
      "matchPackageNames": [
        "/identity/",
        "/gardener-dashboard/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.97",
        "release-v1.98",
        "release-v1.99",
        "release-v1.100",
        "release-v1.101",
        "release-v1.102"
      ],
      "enabled": false,
      "matchPackageNames": [
        "/.*/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.97"
      ],
      "allowedVersions": "/^1[.]97[.].*$/",
      "enabled": true,
      "matchPackageNames": [
        "/gardener-controlplane/",
        "/gardener-controlplane-application/",
        "/gardener-controlplane-runtime/",
        "/gardener-application/",
        "/gardenlet/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.98"
      ],
      "allowedVersions": "/^1[.]98[.].*$/",
      "enabled": true,
      "matchPackageNames": [
        "/gardener-controlplane/",
        "/gardener-controlplane-application/",
        "/gardener-controlplane-runtime/",
        "/gardener-application/",
        "/gardenlet/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.99"
      ],
      "allowedVersions": "/^1[.]99[.].*$/",
      "enabled": true,
      "matchPackageNames": [
        "/gardener-controlplane/",
        "/gardener-controlplane-application/",
        "/gardener-controlplane-runtime/",
        "/gardener-application/",
        "/gardenlet/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.100"
      ],
      "allowedVersions": "/^1[.]100[.].*$/",
      "enabled": true,
      "matchPackageNames": [
        "/gardener-controlplane/",
        "/gardener-controlplane-application/",
        "/gardener-controlplane-runtime/",
        "/gardener-application/",
        "/gardenlet/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.101"
      ],
      "allowedVersions": "/^1[.]101[.].*$/",
      "enabled": true,
      "matchPackageNames": [
        "/gardener-controlplane/",
        "/gardener-controlplane-application/",
        "/gardener-controlplane-runtime/",
        "/gardener-application/",
        "/gardenlet/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.102"
      ],
      "allowedVersions": "/^1[.]102[.].*$/",
      "enabled": true,
      "matchPackageNames": [
        "/gardener-controlplane/",
        "/gardener-controlplane-application/",
        "/gardener-controlplane-runtime/",
        "/gardener-application/",
        "/gardenlet/"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^configuration/configuration/templates/extensions.yaml$"
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://gardener-community.github.io/gardener-charts",
      "versioningTemplate": "semver-coerced",
      "matchStrings": [
        "(?<depName>[a-z-]+):\\\\s+version: (?<currentValue>[0-9.]+)"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": [
        "[.]ya?ml$"
      ],
      "matchStrings": [
        "(?<currentValue>[^ ]+?) # renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)( versioning=(?<versioning>.+?))?\\n"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^addons/addons/templates/dashboard.yaml$"
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://gardener-community.github.io/gardener-charts",
      "versioningTemplate": "semver-coerced",
      "matchStrings": [
        "chart: (?<depName>[a-z-]+)\\n +version: (?<currentValue>[0-9.]+)"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^addons/addons/templates/velero.yaml$"
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://vmware-tanzu.github.io/helm-charts",
      "versioningTemplate": "semver-coerced",
      "matchStrings": [
        "chart: (?<depName>[a-z-]+)\\n +version: (?<currentValue>[0-9.]+)"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^hack/tools/install.sh$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)( versioning=(?<versioning>.+?))?\\n.+?VERSION=(?<currentValue>.+?)\\n"
      ]
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "forkProcessing": "enabled",
  "enabledManagers": [
    "flux",
    "custom.regex",
    "github-actions"
  ],
  "prCreation": "immediate",
  "semanticCommits": "disabled",
  "addLabels": [
    "version-bump"
  ],
  "postUpgradeTasks": {
    "commands": [
      "./hack/import-imagevectors.sh",
      "./hack/pull-helmchart.sh {{{depName}}} {{{newVersion}}}",
      "./hack/ci/yake-local/update-extension-provider-local-image.sh {{{depName}}} {{{newVersion}}}"
    ],
    "fileFilters": [
      "configuration/configuration/images.yaml",
      "helmcharts/**/**",
      "docs/release-notes/next.md",
      "hack/ci/yake-local/garden-content/controller-registrations.yaml"
    ],
    "executionMode": "update"
  }
}
