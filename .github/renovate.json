{
  "prHourlyLimit": 0,
  "postUpgradeTasks": {
      "commands": [".github/renovate-post-upgrade.sh"],
      "executionMode": "branch",
      "fileFilters": ["23ke-base-substitutions.yaml"]
   },
  "flux": {
    "fileMatch": ["base-install/.*.yaml", "flux/23ke-charts-helmrepo.yaml"]
  },
  "packageRules": [
    {
      "matchPackagePatterns": [".*gardener-controlplane.*", "gardenlet"],
      "groupName": "gardener-controlplane"
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "includeForks": true,
  "enabledManagers": ["flux"],
  "prCreation": "immediate",
  "semanticCommits": "disabled"
}
