{
  "assignees": ["fynluk"],
  "baseBranches": [
    "main",
    "release-v1.18",
    "release-v1.17",
    "release-v1.16",
    "release-v1.15"
  ],
  "automerge": "true",
  "platformAutomerge": "true",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 1,
  "flux": {
			"fileMatch": ["pre-gardener/.*.yaml", "gardener/.*.yaml", "flux/gotk-components.yaml"]
  },
  "packageRules": [
    {
      "matchPackagePatterns": [".*gardener-controlplane.*", "gardenlet"],
      "groupName": "gardener-controlplane"
    },
    {
      "matchPackagePatterns": ["identity", "gardener-dashboard"],
      "groupName": "dashboard-identity"
    },
    {
      "matchBaseBranches": [
        "release-v1.18", "release-v1.17", "release-v1.16", "release-v1.15"
      ],
      "matchPackageNames": ["gardener-dashboard", "identity", "garden-kube-apiserver", "garden-etcd", "extensions", "os-ubuntu", "os-gardenlinux", "provider-hcloud", "provider-aws", "provider-gcp", "provider-alicloud", "provider-openstack", "provider-azure", "runtime-gvisor", "networking-cilium", "networking-calico", "shoot-dns-service", "shoot-cert-service"],
      "enabled": false
    },
    {
      "matchBaseBranches": [
        "release-v1.18"
      ],
      "matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],
      "allowedVersions": "/^1\\.57\\..*$/"
    },
    {
      "matchBaseBranches": [
        "release-v1.17"
      ],
      "matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],
      "allowedVersions": "/^1\\.56\\..*$/"
    },
    {
      "matchBaseBranches": [
        "release-v1.16"
      ],
      "matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],
      "allowedVersions": "/^1\\.55\\..*$/"
    },
    {
      "matchBaseBranches": [
        "release-v1.15"
      ],
      "matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],
      "allowedVersions": "/^1\\.54\\..*$/"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^gardener/extensions-base-values.yaml$"
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://gardener-community.github.io/gardener-charts",
      "versioningTemplate": "semver-coerced",
      "matchStrings": [
       "(?<depName>[a-z\-]*?):\\n\ \ \ \ \ \ version:\ (?<currentValue>[0-9\.]*$?)"
      ]
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "includeForks": true,
  "enabledManagers": ["flux", "regex"],
  "prCreation": "immediate",
  "semanticCommits": "disabled",
  "addLabels": ["version-bump"]
}
