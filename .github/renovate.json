  "automerge": true,
  "configMigration": true,
  "dependencyDashboard": true,
  "platformAutomerge": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 1,
  "flux": {
    "fileMatch": [
      "pre-gardener/.*.yaml",
      "gardener/.*.yaml",
      "flux-system/gotk-components.yaml"
    ]
  },
  "packageRules": [
    {
      "groupName": "gardener-controlplane",
      "matchPackageNames": [
        "/.*gardener-controlplane.*/",
        "/gardenlet/"
      ]
    },
    {
      "groupName": "dashboard-identity",
      "matchPackageNames": [
        "/identity/",
        "/gardener-dashboard/"
      ]
    },
    {
      "groupName": "docusaurus",
      "matchPackageNames": [
        "/docusaurus/"
      ]
    },
    {
