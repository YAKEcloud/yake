{
  "assignees": [
    "rhizoet"
  ],
  "baseBranches": [
    "main",
    "release-v1.127",
    "release-v1.128",
    "release-v1.129",
    "release-v1.130",
    "release-v1.131",
    "release-v1.132",
    "release-v1.133"
  ],
  "automerge": true,
  "configMigration": true,
  "dependencyDashboard": true,
  "platformAutomerge": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 1,
  "flux": {
    "managerFilePatterns": [
      "/pre-gardener/.*.yaml/",
      "/gardener/.*.yaml/",
      "/flux-system/gotk-components.yaml/"
    ]
  },
  "packageRules": [
    {
      "groupName": "gardener-controlplane",
      "matchPackageNames": [
        "/.*gardener-controlplane.*/",
        "/gardenlet/"
      ]
    },
    {
      "groupName": "dashboard-identity",
      "matchPackageNames": [
        "/identity/",
        "/gardener-dashboard/"
      ]
    },
    {
      "groupName": "docusaurus",
      "matchPackageNames": [
        "/docusaurus/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.127",
        "release-v1.128",
        "release-v1.129",
        "release-v1.130",
        "release-v1.131",
        "release-v1.132",
        "release-v1.133"
      ],
      "enabled": false,
      "matchPackageNames": [
        "/.*/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.127"
      ],
      "allowedVersions": "/^1[.]127[.].*$/",
      "enabled": true,
      "matchPackageNames": [
        "/gardener-controlplane/",
        "/gardener-controlplane-application/",
        "/gardener-controlplane-runtime/",
        "/gardener-application/",
        "/gardenlet/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.128"
      ],
      "allowedVersions": "/^1[.]128[.].*$/",
      "enabled": true,
      "matchPackageNames": [
        "/gardener-controlplane/",
        "/gardener-controlplane-application/",
        "/gardener-controlplane-runtime/",
        "/gardener-application/",
        "/gardenlet/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.129"
      ],
      "allowedVersions": "/^1[.]129[.].*$/",
      "enabled": true,
      "matchPackageNames": [
        "/gardener-controlplane/",
        "/gardener-controlplane-application/",
        "/gardener-controlplane-runtime/",
        "/gardener-application/",
        "/gardenlet/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.130"
      ],
      "allowedVersions": "/^1[.]130[.].*$/",
      "enabled": true,
      "matchPackageNames": [
        "/gardener-controlplane/",
        "/gardener-controlplane-application/",
        "/gardener-controlplane-runtime/",
        "/gardener-application/",
        "/gardenlet/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.131"
      ],
      "allowedVersions": "/^1[.]131[.].*$/",
      "enabled": true,
      "matchPackageNames": [
        "/gardener-controlplane/",
        "/gardener-controlplane-application/",
        "/gardener-controlplane-runtime/",
        "/gardener-application/",
        "/gardenlet/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.132"
      ],
      "allowedVersions": "/^1[.]132[.].*$/",
      "enabled": true,
      "matchPackageNames": [
        "/gardener-controlplane/",
        "/gardener-controlplane-application/",
        "/gardener-controlplane-runtime/",
        "/gardener-application/",
        "/gardenlet/"
      ]
    },
    {
      "matchBaseBranches": [
        "release-v1.133"
      ],
      "allowedVersions": "/^1[.]133[.].*$/",
      "enabled": true,
      "matchPackageNames": [
        "/gardener-controlplane/",
        "/gardener-controlplane-application/",
        "/gardener-controlplane-runtime/",
        "/gardener-application/",
        "/gardenlet/"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^configuration/configuration/templates/extensions.yaml$/"
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://gardener-community.github.io/gardener-charts",
      "versioningTemplate": "semver-coerced",
      "matchStrings": [
        "(?<depName>[a-z0-9-]+):\\s+version: (?<currentValue>[0-9.]+)"
      ]
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/[.]ya?ml$/"
      ],
      "matchStrings": [
        "(?<currentValue>[^ ]+?) # renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)( versioning=(?<versioning>.+?))?\n"
      ]
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^addons/addons/templates/dashboard.yaml$/"
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://gardener-community.github.io/gardener-charts",
      "versioningTemplate": "semver-coerced",
      "matchStrings": [
        "chart: (?<depName>[a-z0-9-]+)\n +version: (?<currentValue>[0-9.]+)"
      ]
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^addons/addons/templates/velero.yaml$/"
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://vmware-tanzu.github.io/helm-charts",
      "versioningTemplate": "semver-coerced",
      "matchStrings": [
        "chart: (?<depName>[a-z0-9-]+)\n +version: (?<currentValue>[0-9.]+)"
      ]
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^hack/tools/install.sh$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)( versioning=(?<versioning>.+?))?\n.+?VERSION=(?<currentValue>.+?)\n"
      ]
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "forkProcessing": "enabled",
  "enabledManagers": [
    "flux",
    "custom.regex",
    "github-actions",
    "npm"
  ],
  "prCreation": "immediate",
  "semanticCommits": "disabled",
  "addLabels": [
    "version-bump"
  ],
  "postUpgradeTasks": {
    "commands": [
      "./hack/pull-helmchart.sh {{{depName}}} {{{newVersion}}}",
      "./hack/ci/yake-local/update-extension-provider-local-image.sh {{{depName}}} {{{newVersion}}}"
    ],
    "fileFilters": [
      "helmcharts/**/**",
      "docs/release-notes/next.md",
      "hack/ci/yake-local/garden-content/controller-registrations.yaml"
    ],
    "executionMode": "update"
  }
}
