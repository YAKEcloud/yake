{
  "assignees": ["JensAc"],
  "baseBranches": [
    "main",
    // template "_BRANCH_",
    "release-v1.68",
    "release-v1.67",
    "release-v1.66",
    "release-v1.65",
    "release-v1.64",
    "release-v1.63",
    "release-v1.62",
    "release-v1.61",
    "release-v1.60",
  ],
  "automerge": true,
  "dependencyDashboard": true,
  "platformAutomerge": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 1,
  "flux": {
	"fileMatch": ["pre-gardener/.*.yaml", "gardener/.*.yaml", "flux-system/gotk-components.yaml"]
  },
  "packageRules": [
    {
      "matchPackagePatterns": [".*gardener-controlplane.*", "gardenlet"],
      "groupName": "gardener-controlplane"
    },
    {
      "matchPackagePatterns": ["identity", "gardener-dashboard"],
      "groupName": "dashboard-identity"
    },
    {
      "matchBaseBranches": [
        // template "_BRANCH_",
        "release-v1.68",
        "release-v1.67",
        "release-v1.66",
        "release-v1.65",
        "release-v1.64",
        "release-v1.63",
        "release-v1.62",
        "release-v1.61",
        "release-v1.60",
      ],
      "matchPackagePatterns": [".*"],
      "enabled": false
    },
    // template {"matchBaseBranches":["_BRANCH_"],"allowedVersions":"/^_MAJOR_[.]_MINOR_[.].*$/","matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],"enabled": true },
    {"matchBaseBranches":["release-v1.68"],"allowedVersions":"/^1[.]68[.].*$/","matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],"enabled": true },
    {"matchBaseBranches":["release-v1.67"],"allowedVersions":"/^1[.]67[.].*$/","matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],"enabled": true },
    {"matchBaseBranches":["release-v1.66"],"allowedVersions":"/^1[.]66[.].*$/","matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],"enabled": true },
    {"matchBaseBranches":["release-v1.65"],"allowedVersions":"/^1[.]65[.].*$/","matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],"enabled": true },
    {
      "matchBaseBranches": [
        "release-v1.64"
      ],
      "matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],
      "allowedVersions": "/^1\\.64\\..*$/",
      "enabled": true
    },
    {"matchBaseBranches":["release-v1.63"],"allowedVersions":"/^1[.]63[.].*$/","matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],"enabled": true },
    {
      "matchBaseBranches": [
        "release-v1.62"
      ],
      "matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],
      "allowedVersions": "/^1\\.62\\..*$/",
      "enabled": true
    },
    {
      "matchBaseBranches": [
        "release-v1.61"
      ],
      "matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],
      "allowedVersions": "/^1\\.61\\..*$/",
      "enabled": true
    },
    {
      "matchBaseBranches": [
        "release-v1.60"
      ],
      "matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],
      "allowedVersions": "/^1\\.60\\..*$/",
      "enabled": true
    },
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^gardener/configuration/templates/extensions-base-values.yaml$"
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://gardener-community.github.io/gardener-charts",
      "versioningTemplate": "semver-coerced",
      "matchStrings": [
        // https://regex101.com/r/oimJd1/1
        "(?<depName>[a-z-]+):\\s+version: (?<currentValue>[0-9.]+)"
      ]
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "includeForks": true,
  "enabledManagers": ["flux", "regex"],
  "prCreation": "immediate",
  "semanticCommits": "disabled",
  "addLabels": ["version-bump"],
  "postUpgradeTasks": {
    "commands": [
      "cd hack/go/imagevector-importer && go run main.go import --config config.yaml > ../../../gardener/configuration/images.yaml",
      "./hack/pull-helmchart.sh {{{depName}}} {{{newVersion}}}",
    ],
    "fileFilters": ["gardener/configuration/images.yaml", "helmcharts/**/**", "docs/release-notes/next.md"],
    "executionMode": "update"
  }
}
