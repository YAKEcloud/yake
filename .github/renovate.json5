{
  "assignees": ["gesslein"],
  "baseBranches": [
    "main",
    "release-v1.60",
    "release-v1.59",
    "release-v1.58",
    "release-v1.18",
  ],
  "automerge": "true",
  "platformAutomerge": "true",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 1,
  "flux": {
			"fileMatch": ["pre-gardener/.*.yaml", "gardener/.*.yaml", "flux-system/gotk-components.yaml"]
  },
  "packageRules": [
    {
      "matchPackagePatterns": [".*gardener-controlplane.*", "gardenlet"],
      "groupName": "gardener-controlplane"
    },
    {
      "matchPackagePatterns": ["identity", "gardener-dashboard"],
      "groupName": "dashboard-identity"
    },
    {
      "matchBaseBranches": [
        "release-v1.60", "release-v1.59", "release-v1.58", "release-v1.19"
      ],
      "matchPackagePatterns": [".*"],
      "enabled": false
    },
    {
      "matchBaseBranches": [
        "release-v1.60"
      ],
      "matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],
      "allowedVersions": "/^1\\.60\\..*$/",
      "enabled": true
    },
    {
      "matchBaseBranches": [
        "release-v1.59"
      ],
      "matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],
      "allowedVersions": "/^1\\.59\\..*$/",
      "enabled": true
    },
    {
      "matchBaseBranches": [
        "release-v1.58"
      ],
      "matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],
      "allowedVersions": "/^1\\.58\\..*$/",
      "enabled": true
    },
    {
      "matchBaseBranches": [
        "release-v1.18"
      ],
      "matchPackagePatterns": ["gardener-controlplane", "gardener-controlplane-application", "gardener-controlplane-runtime", "gardener-application", "gardenlet"],
      "allowedVersions": "/^1\\.57\\..*$/",
      "enabled": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^gardener/configuration/templates/extensions-base-values.yaml$"
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://gardener-community.github.io/gardener-charts",
      "versioningTemplate": "semver-coerced",
      "matchStrings": [
        // https://regex101.com/r/oimJd1/1
        "(?<depName>[a-z-]+):\\s+version: (?<currentValue>[0-9.]+)"
      ]
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "includeForks": true,
  "enabledManagers": ["flux", "regex"],
  "prCreation": "immediate",
  "semanticCommits": "disabled",
  "addLabels": ["version-bump"]
}
